extends layout

block content
  div(class="container lg:container lg:mx-auto sm:mx-auto md:mx-auto mt-5")
    div(class="subheader flex justify-between mb-4 w-full")
      div(class="subtitle")
        h1(class="text-xl") #{title}
      div(class="createNew text-lg")
        a(href='/studios/new' class="hover:underline") Create Studio
    div(class="flex flex-wrap p-4 bg-gray-200 rounded-2xl")
      each studio in studios
        div(class="tile m-5")
          form(action=`/studios/${studio.id}/edit`, method='POST')
            input(type='hidden' name='_csrf' value="{{csrfToken}}")
            p 
              input(type='text', name='name', value=studio.name class="w-full px-4 py-3 border-2 rounded-lg mb-2 outline-none")
            input(type='submit', value='Edit' class="w-full rounded-lg bg-green-500 px-4 py-3 hover:bg-green-700 cursor-pointer")
          div(class="mt-5")
            form(action=`/studios/${studio.id}/delete`, method='POST')
              input(type='submit', value='Delete' class="delete w-full rounded-lg bg-red-500 px-4 py-3 hover:bg-red-700 cursor-pointer")