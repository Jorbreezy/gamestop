extends layout

block content
  div.container(class="lg:container lg:mx-auto sm:mx-auto md:mx-auto").mt-5
    div.subheader.flex.justify-between.mb-4.w-full
      div.subtitle
        h1.text-xl #{title}
      div.createNew.text-lg
        a(href='/studios/new' class="hover:underline") Create Studio
    div.flex.flex-wrap.p-4.bg-gray-200.rounded-2xl
      each studio in studios
        div.tile.m-5
          form(action=`/studios/${studio.id}/edit`, method='POST')
            input(type='hidden' name='_csrf' value="{{csrfToken}}")
            p 
              input(type='text', name='name', value=studio.name class="w-full px-4 py-3 border-2 rounded-lg mb-2 outline-none")
            input(type='submit', value='Edit' class="w-full rounded-lg bg-green-500 px-4 py-3 hover:bg-green-700 cursor-pointer")
          div.delete.mt-5
            form(action=`/studios/${studio.id}/delete`, method='POST')
              input.delete(type='submit', value='Delete' class="w-full rounded-lg bg-red-500 px-4 py-3 hover:bg-red-700 cursor-pointer")