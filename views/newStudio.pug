extends layout

block content
  div(class="container w-96 mx-auto flex flex-col flex-wrap")
    div(class="subheader text-center mb-4 w-full")
      div(class="subtitle")
        h1(class='text-2xl font-bold') Create a new studio
    form(action='/studios/new', method='POST')
      input(type='hidden' name='_csrf' value="{{csrfToken}}")
      p
        | Title: 
        input(type='text', name='name' class="w-full px-4 py-3 border-2 rounded-lg mb-2 outline-none")
      input(type='submit', value='Submit' class="w-full rounded-lg bg-green-500 px-4 py-3 hover:bg-green-700 cursor-pointer")