extends layout

block content
  div.container(class="lg:container lg:mx-auto sm:mx-auto md:mx-auto").mt-5
    div.subheader.flex.justify-between.mb-4.w-full
      div.subtitle
        h1.text-xl #{title}
      div.createNew.text-lg
        a(href='/games/new' class="hover:underline") Create Game
    div.flex.flex-wrap.p-4.bg-gray-300.rounded-2xl
      each game in games
        a.relative.m-5.bg-cover.bg-center.bg-no-repeat.w-64.h-96.flex-grow(style=`background-image: url(${game.img})` href=`/games/${game.id}` class="")
          div.h-8.absolute.bottom-0.w-full.text-white.text-center.bg-black.bg-opacity-60
            p.text-lg #{game.title}