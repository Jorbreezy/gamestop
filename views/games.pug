extends layout

block content
  div.container
    div.subheader
      div.title
        h1 #{title}
      div.createNew
        a(href='/games/new') Create Game
    div.content
      each game in games
        a.card(style=`background-image: url(${game.img})` href=`/games/${game.id}`)
          div.itemInfo
            div.itemTitle
              p #{game.title}