extends layout

block content
  div(class="container lg:container lg:mx-auto")
    div(class="subheader text-center mb-4 w-full")
      div(class="subtitle")
        h1(class="text-2xl font-bold") Create a new game
    form(action='/games/new', method='POST')
      input(type='hidden' name='_csrf' value="{{csrfToken}}")
      p
        | Title: 
        input(type='text', name='title', class="w-full px-4 py-3 border-solid border-2 border-light-blue-700 rounded-lg mb-2 outline-none")
        |          Price: 
        input(type='number', name='price', class="w-full px-4 py-3 border-solid border-2 border-light-blue-700 rounded-lg mb-2 outline-none")
        |          Studio: 
        input(type='text', name='studio', class="w-full px-4 py-3 border-solid border-2 border-light-blue-700 rounded-lg mb-2 outline-none")
        |          Type: 
        input(type='text', name='type', class="w-full px-4 py-3 border-solid border-2 border-light-blue-700 rounded-lg mb-2 outline-none")
        |          Img: 
        input(type='text', name='img', class="w-full px-4 py-3 border-solid border-2 border-light-blue-700 rounded-lg mb-4 outline-none")
      input(type='submit', value='Submit' class="w-full rounded-lg bg-green-500 px-4 py-3 hover:bg-green-700 cursor-pointer")
