extends layout

block content
  div(class="lg:container lg:mx-auto container mx-auto text-center mt-5")
    div(class="title")
      h2(class="text-2xl font-bold") Welcome To Gamestop
    div(class="mainContent bg-gray-300 rounded-2xl p-5")
      section(class="games min-h-full m-5")
        div(class="subtitle mb-2 font-medium")
          h2(class="text-lg font-medium") Newly Released
        div(class="info flex justify-evenly")
          div(class="game inline-block")
            p Call of Duty Cold War
          div(class="game inline-block")
            p Spiderman Miles Morales
          div(class="game inline-block")
            p Demon's Souls Remake
      section(class="studios min-h-full m-5")
        div(class="subtitle mb-2 font-medium")
          h2(class="text-lg font-medium") Popular Studios
        div(class="info flex justify-evenly")
          div(class="studio inline-block")
            p Treyarch
          div(class="studio inline-block")
            p Insomniac Games
          div(class="Studio inline-block")
            p Bluepoint games